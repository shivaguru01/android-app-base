<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:minWidth="@dimen/button_width"
                android:id="@+id/submit"
                android:background="@drawable/button_bg_rounded"
                android:layout_height="@dimen/button_height">

    <RelativeLayout
            android:layout_height="wrap_content"
            android:id="@+id/submit_content"
            android:layout_width="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="@string/next"
                  android:id="@+id/button_text"
                  style="@style/TextStyleMedium"
                  android:textColor="@android:color/white"
                  android:textSize="16sp"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="5dp"
                  android:paddingLeft="3dp"
                  android:paddingRight="3dp"
                  android:layout_height="wrap_content"/>

        <ImageView android:layout_width="@dimen/icon_small_size"
                   android:layout_height="@dimen/icon_small_size"
                   android:paddingTop="4dp"
                   android:layout_alignBottom="@id/button_text"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@id/button_text"
                   android:src="@drawable/arrow_white"/>

    </RelativeLayout>

    <ImageView
            android:id="@+id/loader"
            android:visibility="gone"
            android:src="@drawable/loading_white"
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"/>

</RelativeLayout>