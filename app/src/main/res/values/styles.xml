<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/celias_regular</item>
    </style>

    <!-- Fonts -->
    <style name="TextStyleRegular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/celias_regular</item>
    </style>
    <style name="TextStyleMedium" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/celias_medium</item>
    </style>
    <style name="TextStyleBold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/celias_bold</item>
    </style>
    <style name="TextStyleLight" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/celias_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="action_bar_style" parent="@style/TextStyleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_white</item>
    </style>

    <!--Splash Screen-->
    <style name="welcome_text" parent="@style/TextStyleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="app_name" parent="@style/TextStyleMedium">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="by_company" parent="@style/TextStyleRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <!-- Login screen -->
    <style name="text_style_small_red_regular" parent="@style/TextStyleRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="edit_text_content" parent="@style/TextStyleMedium">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="resend_code" parent="@style/TextStyleMedium">
        <item name="android:textColor">@drawable/item_selector</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Recycler screen -->
    <style name="recycler_item_screen_spacing" >
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="page_spacing" >
        <item name="android:padding">12dp</item>
    </style>

</resources>
